<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Exploreka" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/neutral_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_500</item>
        <item name="colorSecondaryVariant">@color/primary_500</item>
        <item name="colorOnSecondary">@color/neutral_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <!-- Theme for light mode -->
    <style name="Theme.Exploreka.Light" parent="Theme.Exploreka">
        <!-- Customize your light theme here. -->
    </style>

</resources>
