<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle.WhiteText" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:background">@drawable/rounded_button_white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonStyle.Favorite" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/ic_baseline_favorite_24</item>
        <item name="android:elevation">0dp</item>
        <item name="android:icon">@drawable/ic_baseline_favorite_24</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FAB.WhiteText" parent="Widget.Design.FloatingActionButton">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:background">@drawable/rounded_fab</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

</resources>