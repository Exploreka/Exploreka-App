<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle.WhiteText" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:background">@drawable/rounded_button_white</item>
    </style>

    <style name="ButtonStyle.Profile" parent="Widget.Material3.Button">
        <item name="android:background">@color/neutral_50</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@color/neutral_50</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Ganti "your_font_family" dengan nama font yang Anda inginkan -->
    </style>

    <style name="ButtonStyle.Favorite" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/ic_baseline_favorite_24</item>
        <item name="android:elevation">0dp</item>
        <item name="android:icon">@drawable/ic_baseline_favorite_24</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonStyle.Logout" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/secondary_500</item>
        <item name="android:elevation">12dp</item>
        <item name="android:textColor">@color/neutral_50</item>
        <item name="android:tint">@color/white</item>
        <item name="drawableLeftCompat">@drawable/ic_baseline_logout_24</item>>
    </style>

    <style name="SearchViewTheme">
        <item name="android:textColorPrimary">@color/neutral_50</item> <!-- Warna teks pada SearchView -->
        <item name="android:editTextColor">@color/neutral_50</item> <!-- Warna teks pada input SearchView -->
        <item name="android:queryBackground">@color/primary_500</item> <!-- Warna latar belakang input SearchView -->

    </style>


    <style name="FAB.WhiteText" parent="Widget.Design.FloatingActionButton">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:background">@drawable/rounded_fab</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

</resources>