<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_500"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/exploreka"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/exploreka"
            android:layout_gravity="start"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_gravity="end"
            android:padding="10dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_help_outline_24"
            android:layout_gravity="end"
            android:padding="10dp"
            app:tint="@color/white" />



    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/iv_profile"
        layout="@layout/item_profile"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_riwayat_transaksi"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile"
        android:layout_marginTop="27dp"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:text="Riwayat Transaksi"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_baseline_description_24"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btn_favorite"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/btn_riwayat_transaksi"
        app:layout_constraintStart_toStartOf="@id/btn_riwayat_transaksi"
        android:layout_marginTop="0dp"
        android:text="Favorit"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_baseline_favorite_24"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btn_report_bug"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/btn_favorite"
        app:layout_constraintStart_toStartOf="@id/btn_favorite"
        android:layout_marginTop="0dp"
        android:text="Laporkan Bug"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_baseline_warning_24"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btn_helpdesk"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/btn_report_bug"
        app:layout_constraintStart_toStartOf="@id/btn_report_bug"
        android:layout_marginTop="0dp"
        android:text="Pusat Bantuan"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_baseline_headphones_24"
        app:cornerRadius="12dp"/>

    <Button
        android:id="@+id/btn_setting"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/btn_helpdesk"
        app:layout_constraintStart_toStartOf="@id/btn_helpdesk"
        android:layout_marginTop="0dp"
        android:text="Pengaturan"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_baseline_settings_24"
        app:cornerRadius="12dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation_background"
        android:elevation="8dp"
        app:itemIconTint="@color/grey"
        app:itemTextColor="@color/grey"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FAB.WhiteText"
        app:borderWidth="5dp"
        android:background="@drawable/rounded_fab"
        app:borderColor="@color/grey2"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.LargeComponent"
        app:backgroundTint="@color/primary_500"
        android:src="@drawable/ic_baseline_explore_24"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation"
        android:layout_marginTop="-16dp" /> <!-- Sesuaikan dengan nilai yang diinginkan -->


</androidx.constraintlayout.widget.ConstraintLayout>