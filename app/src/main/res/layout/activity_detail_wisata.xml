<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailWisataActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:elevation="0.0004dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:backgroundTint="@color/transparan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/karimunjawa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/name_and_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/namaWisataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karimun Jawa"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/hargaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 150.000 - 300.000"
            android:textSize="14sp"
            android:textColor="@color/primary_500"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/name_and_price"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/star1ImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="#E2BD02" />

        <ImageView
            android:id="@+id/star2ImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="#E2BD02" />

        <ImageView
            android:id="@+id/star3ImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="#E2BD02" />

        <ImageView
            android:id="@+id/star4ImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="#E2BD02" />

        <ImageView
            android:id="@+id/star5ImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="#E2BD02" />
        <TextView
            android:id="@+id/review_star"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:text="4.9"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="38dp"
            android:layout_height="15dp"
            android:text="(4051)"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_favorite_24"
        android:background="@null"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:tint="@color/red" />

    <com.ms.square.android.expandabletextview.ExpandableTextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:collapsedLines="2"
        app:layout_constraintStart_toStartOf="@id/viewPager"
        app:layout_constraintTop_toBottomOf="@id/layout_review"
        app:trimCollapsedText="aa"
        app:trimExpandedText="aaa">

        <TextView
            android:id="@+id/fullInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </com.ms.square.android.expandabletextview.ExpandableTextView>


    <Button
        android:id="@+id/btn_forgotPassword"
        style="@style/Widget.Material3.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Beli Sekarang"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:padding="0dp"
        app:backgroundTint="#FF7916"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_360"
        style="@style/Widget.Material3.Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="360 VIEW"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:padding="0dp"
        app:backgroundTint="@color/primary_500"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>