<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp">

    <TextView
        android:id="@+id/tv_title_sheet_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mau Wisata ke Daerah Mana?"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_sheet_country">
        
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Yogyakarta"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Bandung"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Semarang"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Surabaya"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"/>

    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>