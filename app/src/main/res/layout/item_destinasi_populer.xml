<androidx.cardview.widget.CardView
    android:layout_width="140dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:orientation="horizontal"
    app:cardCornerRadius="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="140dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="116dp"
            android:scaleType="centerCrop"
            android:src="@drawable/karimunjawa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="8dp"
            android:text="Karimunjawa"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:padding="8dp"
            android:text="Jepara, Jawa Tengah"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/locationTextView"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/review_star"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:text="4.9"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="5dp"
                android:textSize="9sp"/>

            <ImageView
                android:id="@+id/star1ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="#E2BD02" />

            <ImageView
                android:id="@+id/star2ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="#E2BD02" />

            <ImageView
                android:id="@+id/star3ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="#E2BD02" />

            <ImageView
                android:id="@+id/star4ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="#E2BD02" />

            <ImageView
                android:id="@+id/star5ImageView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="#E2BD02" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="12dp"
                android:text="(4051)"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="20dp"
                android:textSize="9sp"/>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
